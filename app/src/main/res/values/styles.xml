<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.DevLife.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">@color/blue</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@color/blue_50</item>
        <item name="tabIndicator">@drawable/sh_tab_indicator</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/TextAppearance.DevLife.Button</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="TextAppearance.DevLife.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>